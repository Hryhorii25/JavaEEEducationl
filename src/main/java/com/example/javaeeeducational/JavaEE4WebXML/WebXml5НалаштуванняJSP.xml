<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

 <!--Блок налаштування сервлета -->
    <jsp-config>

        <jsp-property-group>
            <url-pattern>jsp/Init.jsp</url-pattern>
            <scripting-invalid>true</scripting-invalid>  <!-- Вкл/Викл скріптінг на сторінці-->
            <is-xml>true</is-xml> <!-- перевіряє чи вказана сторінка дійсно xml файл який містить xml сод-->
            <!--Сторінка яка включається на початок -->
            <include-prelude></include-prelude>
            <!--Сторінка яка включається в кінець -->
            <include-coda></include-coda>


        </jsp-property-group>

    </jsp-config>


    <!---->
</web-app>
